<section class = "mx-4 my-4">
<h3> Create New Blog</h3>

        <form class ="new-post-form">
        <div class="form-group ">
            <label for="post-title">Title</label>
            <input type="text" class="form-control" id="post-title" name = "post-title" />
            
        </div>
        <div class="form-group">
            <label for="post-text">Text</label>
            <textarea class = "form-control" id =" post-text" rows = "3" name ="blog-body"></textarea>
        </div>
        <button type="submit" class="btn btn-danger">Create</button>
        </form>
</section>

{{#if posts.length}}
<section class = "mx-4 my-4">
    <h3> Your Blogs </h3>
    {{#each posts as |post|}}
    <div class="card text-black bg-default mb-3 mx-5 my-5 rounded">
    <h5 class="card-header text-black"> {{post.title}} <span class="float-right">{{format_date post.created_at}}</span></h5>
    <div class="card-body">
        <p class="card-text text-black">{{post.post_text}}</p>
        <a href="/post/{{post.id}}" class="btn btn-danger">{{comments.length}} {{format_plural "comment" post.comments.length}}</a>
        <a href ="/dashboard/edit/{{post.id}}" class ="btn btn-danger edit-link">Edit Blog</a>
    </div>
    </div>
    {{/each}}
</section>
{{/if}}


<script src = "/javascript/add-blog.js"></script>